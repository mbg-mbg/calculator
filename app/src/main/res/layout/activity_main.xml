<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context=".MainActivity">


    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:background="#cecece"
        app:title="정수 계산기"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_weight="15"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:gravity="center_vertical|right"
            android:padding="5dp"
            android:text="0"
            android:textSize="50sp"
            android:id="@+id/result_text"
            android:textColor="#666666"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="75"
        android:orientation="vertical"
        android:weightSum="100"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_weight="20"
            android:orientation="horizontal"
            android:weightSum="100">

            <android.widget.Button
                android:onClick="buttonclick"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:text="AC"
                android:textSize="30sp"
                android:id="@+id/all_clear_button"/>

            <android.widget.Button
                android:onClick="buttonclick"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:text="CE"
                android:textSize="30sp"
                android:id="@+id/clear_entry_button"/>

            <android.widget.Button
                android:onClick="buttonclick"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:text="BS"
                android:textSize="30sp"
                android:id="@+id/back_space_button"/>

            <android.widget.Button
                android:onClick="buttonclick"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:text="/"
                android:textSize="30sp"
                android:backgroundTint="#929292"
                android:id="@+id/division_button"/>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_weight="20"
            android:orientation="horizontal"
            android:weightSum="100">

            <android.widget.Button
                android:onClick="buttonclick"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:text="7"
                android:textSize="30dp"
                android:id="@+id/num_7_button"/>

            <android.widget.Button
                android:onClick="buttonclick"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:text="8"
                android:textSize="30sp"
                android:id="@+id/num_8_button"/>

            <android.widget.Button
                android:onClick="buttonclick"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:text="9"
                android:textSize="30sp"
                android:id="@+id/num_9_button"/>

            <android.widget.Button
                android:onClick="buttonclick"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:text="*"
                android:textSize="30sp"
                android:backgroundTint="#929292"
                android:id="@+id/multiply_button"/>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_weight="20"
            android:orientation="horizontal"
            android:weightSum="100">

            <android.widget.Button
                android:onClick="buttonclick"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:text="4"
                android:textSize="30dp"
                android:id="@+id/num_4_button"/>

            <android.widget.Button
                android:onClick="buttonclick"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:text="5"
                android:textSize="30sp"
                android:id="@+id/num_5_button"/>

            <android.widget.Button
                android:onClick="buttonclick"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:text="6"
                android:textSize="30sp"
                android:id="@+id/num_6_button"/>

            <android.widget.Button
                android:onClick="buttonclick"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:text="-"
                android:textSize="30sp"
                android:backgroundTint="#929292"
                android:id="@+id/subtraction_button"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_weight="20"
            android:orientation="horizontal"
            android:weightSum="100">

            <android.widget.Button
                android:onClick="buttonclick"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:text="1"
                android:textSize="30dp"
                android:id="@+id/num_1_button"/>

            <android.widget.Button
                android:onClick="buttonclick"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:text="2"
                android:textSize="30sp"
                android:id="@+id/num_2_button"/>

            <android.widget.Button
                android:onClick="buttonclick"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:text="3"
                android:textSize="30sp"
                android:id="@+id/num_3_button"/>

            <android.widget.Button
                android:onClick="buttonclick"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:text="+"
                android:textSize="30sp"
                android:backgroundTint="#929292"
                android:id="@+id/addition_button"/>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_weight="20"
            android:orientation="horizontal"
            android:weightSum="100">

            <android.widget.Button
                android:onClick="buttonclick"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:text="0"
                android:textSize="30dp"
                android:id="@+id/num_0_button"/>

            <android.widget.Button
                android:onClick="buttonclick"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:text="."
                android:textSize="30sp"
                android:id="@+id/decimal_button"/>

            <android.widget.Button
                android:onClick="buttonclick"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:text="="
                android:textSize="30sp"
                android:backgroundTint="#929292"
                android:id="@+id/result_button"/>



        </LinearLayout>

    </LinearLayout>

</LinearLayout>

